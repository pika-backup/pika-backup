<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.10" />
  <requires lib="libadwaita" version="1.4" />
  <template class="PkAppWindow" parent="AdwApplicationWindow">
    <property name="width-request">360</property>
    <property name="height-request">294</property>
    <property name="default-width">782</property>
    <property name="default-height">640</property>
    <property name="title" translatable="yes">Pika Backup</property>
    <property name="content">
      <object class="AdwToastOverlay" id="toast">
        <property name="child">
          <object class="AdwNavigationView" id="navigation_view">
            <child>
              <object class="PkOverviewPage" id="page_overview" />
            </child>
            <child>
              <object class="PkDetailPage" id="page_detail" />
            </child>
          </object>
        </property>
      </object>
    </property>
    <child>
      <object class="GtkShortcutController">
        <property name='scope'>managed</property>
        <child>
          <object class='GtkShortcut'>
            <property name='trigger'>&lt;Control&gt;N</property>
            <property name='action'>action(app.setup)</property>
          </object>
        </child>
        <child>
          <object class='GtkShortcut'>
            <property name='trigger'>&lt;Control&gt;question</property>
            <property name='action'>action(app.shortcuts)</property>
          </object>
        </child>
        <child>
          <object class='GtkShortcut'>
            <property name='trigger'>&lt;Control&gt;comma</property>
            <property name='action'>action(app.backup-preferences)</property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
